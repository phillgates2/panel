            except Exception:
                pass
    except Exception:
        pass
    try:
        from src.panel import forum as _forum

        if hasattr(_forum, "forum_bp"):
            try:
                module_app.register_blueprint(_forum.forum_bp)
            except Exception:
                pass
    except Exception:
        pass
    try:
        if admin_bp is not None:
            module_app.register_blueprint(admin_bp)
    except Exception:
        pass


