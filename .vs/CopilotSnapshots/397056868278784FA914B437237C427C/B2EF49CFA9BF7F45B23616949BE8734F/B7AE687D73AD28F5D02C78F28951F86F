<script>
// Dashboard real-time features
document.addEventListener('DOMContentLoaded', function() {
    // Request server status updates
    if (window.socket) {
        window.socket.emit('server_status_request', {
            server_ids: ['main']  // Add more server IDs as needed
        });

        // Refresh every 30 seconds
        setInterval(() => {
            window.socket.emit('server_status_request', {
                server_ids: ['main']
            });
        }, 30000);
    }
});

function refreshServerStatus() {
    if (window.socket) {
        window.socket.emit('server_status_request', {
            server_ids: ['main']
        });
    }
}
</script>
