# Production Environment Configuration
# Copy this file to .env.prod and update with your values
# NEVER commit this file to version control

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Flask environment
FLASK_ENV=production
PANEL_DEBUG=false

# Secret key (generate a new one for production)
PANEL_SECRET_KEY=change_this_to_a_very_long_random_secret_key_at_least_32_characters

# Application host and port
PANEL_HOST=0.0.0.0
PANEL_PORT=8080

# ============================================================================
# DATABASE SETTINGS
# ============================================================================

# PostgreSQL database configuration
PANEL_DB_HOST=postgres
PANEL_DB_PORT=5432
PANEL_DB_NAME=panel
PANEL_DB_USER=panel_user
PANEL_DB_PASS=change_this_to_a_secure_database_password

# Database connection pool settings
PANEL_DB_POOL_SIZE=10
PANEL_DB_MAX_OVERFLOW=20
PANEL_DB_POOL_RECYCLE=3600

# ============================================================================
# CACHE & SESSION SETTINGS
# ============================================================================

# Redis configuration
PANEL_REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=change_this_to_a_secure_redis_password

# Cache settings
PANEL_CACHE_TYPE=redis
PANEL_CACHE_REDIS_URL=redis://redis:6379/2
PANEL_CACHE_DEFAULT_TIMEOUT=300

# Session settings
PANEL_SESSION_TYPE=redis
PANEL_SESSION_REDIS_URL=redis://redis:6379/1

# Rate limiting
PANEL_RATE_LIMIT_STORAGE_URL=redis://redis:6379/3

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# CORS settings
PANEL_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Content Security Policy
PANEL_CSP_DEFAULT_SRC=self
PANEL_CSP_SCRIPT_SRC=self unsafe-inline
PANEL_CSP_STYLE_SRC=self unsafe-inline
PANEL_CSP_IMG_SRC=self data: https:
PANEL_CSP_FONT_SRC=self

# Security headers
PANEL_SECURITY_HEADERS=true

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Prometheus metrics
PANEL_METRICS_ENABLED=true

# Logging configuration
PANEL_LOG_LEVEL=INFO
PANEL_LOG_FORMAT=json
PANEL_LOG_FILE=/app/logs/panel.log

# Loki logging (optional)
LOKI_URL=http://loki:3100

# ============================================================================
# EMAIL SETTINGS (Optional)
# ============================================================================

# SMTP configuration for notifications
PANEL_SMTP_SERVER=smtp.gmail.com
PANEL_SMTP_PORT=587
PANEL_SMTP_USERNAME=your-email@gmail.com
PANEL_SMTP_PASSWORD=your-app-password
PANEL_SMTP_TLS=true

# Email notifications
PANEL_ADMIN_EMAIL=admin@yourdomain.com
PANEL_ERROR_EMAIL=errors@yourdomain.com

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================

# Slack notifications
PANEL_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Sentry error tracking
PANEL_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable features
PANEL_FEATURE_ADVANCED_ANALYTICS=true
PANEL_FEATURE_USER_NOTIFICATIONS=true
PANEL_FEATURE_API_RATE_LIMITING=true
PANEL_FEATURE_AUDIT_LOGGING=true

# ============================================================================
# BACKUP SETTINGS
# ============================================================================

# Database backup configuration
PANEL_BACKUP_ENABLED=true
PANEL_BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
PANEL_BACKUP_RETENTION_DAYS=30
PANEL_BACKUP_S3_BUCKET=your-backup-bucket
PANEL_BACKUP_S3_REGION=us-east-1

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Gunicorn settings
PANEL_WORKERS=4
PANEL_WORKER_CLASS=sync
PANEL_WORKER_CONNECTIONS=1000
PANEL_MAX_REQUESTS=1000
PANEL_MAX_REQUESTS_JITTER=50

# Application performance
PANEL_REQUEST_TIMEOUT=30
PANEL_SESSION_TIMEOUT=3600
PANEL_CACHE_TIMEOUT=300

# ============================================================================
# DEVELOPMENT SETTINGS (Keep false in production)
# ============================================================================

# Debug mode (NEVER enable in production)
FLASK_DEBUG=false
PANEL_DEBUG=false

# Development tools
PANEL_PROFILER_ENABLED=false
PANEL_DEBUG_TOOLBAR_ENABLED=false

# ============================================================================
# SSL/HTTPS SETTINGS
# ============================================================================

# SSL certificate paths (mounted volumes)
PANEL_SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
PANEL_SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# HTTPS enforcement
PANEL_FORCE_HTTPS=true
PANEL_HSTS_MAX_AGE=63072000
PANEL_HSTS_INCLUDE_SUBDOMAINS=true
PANEL_HSTS_PRELOAD=true

# ============================================================================
# CONTAINER RESOURCE LIMITS
# ============================================================================

# Docker resource constraints
PANEL_CPU_LIMIT=1.0
PANEL_MEMORY_LIMIT=1G
PANEL_CPU_RESERVATION=0.5
PANEL_MEMORY_RESERVATION=512M

# ============================================================================
# MONITORING ENDPOINTS
# ============================================================================

# Health check settings
PANEL_HEALTH_CHECK_ENABLED=true
PANEL_HEALTH_CHECK_TIMEOUT=10
PANEL_HEALTH_CHECK_RETRIES=3

# Metrics endpoint
PANEL_METRICS_ENDPOINT_ENABLED=true
PANEL_METRICS_ENDPOINT_PATH=/metrics

# ============================================================================
# MAINTENANCE SETTINGS
# ============================================================================

# Maintenance mode
PANEL_MAINTENANCE_MODE=false
PANEL_MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Database maintenance
PANEL_DB_MAINTENANCE_ENABLED=true
PANEL_DB_VACUUM_SCHEDULE=0 3 * * 0  # Weekly on Sunday at 3 AM

# ============================================================================
# COMPLIANCE & AUDIT
# ============================================================================

# GDPR compliance
PANEL_GDPR_COMPLIANT=true
PANEL_DATA_RETENTION_DAYS=2555  # 7 years

# Audit logging
PANEL_AUDIT_ENABLED=true
PANEL_AUDIT_LOG_RETENTION_DAYS=365

# ============================================================================
# THIRD-PARTY INTEGRATIONS
# ============================================================================

# Google Analytics (optional)
PANEL_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Social login (optional)
PANEL_GOOGLE_CLIENT_ID=your-google-client-id
PANEL_GOOGLE_CLIENT_SECRET=your-google-client-secret

PANEL_GITHUB_CLIENT_ID=your-github-client-id
PANEL_GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================================================
# CUSTOM SETTINGS
# ============================================================================

# Add your custom environment variables here
# PANEL_CUSTOM_SETTING=value