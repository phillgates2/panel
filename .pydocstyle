[pydocstyle]
# pydocstyle configuration for Panel
# Based on Google style guide with some customizations

# Inherit from Google style
inherit = true

# Add custom patterns
match = (?!test_).*\.py
match-dir = (?!tests|__pycache__|migrations|\.git)

# Ignore specific error codes
ignore = D100,D104,D105,D107,D203,D204,D213,D215,D400,D401,D402,D403,D404,D405,D406,D407,D408,D409,D410,D411,D412,D413,D414,D415,D416,D417

# Custom conventions
convention = google

# Verbose output
verbose = 1